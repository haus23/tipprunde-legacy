{
  "extends": ["@haus23/tipprunde-tsconfig/app.json"],
  "include": ["src"],
  "compilerOptions": {
    /* Loose linting */
    "noUncheckedIndexedAccess": false,

    /* Vite */
    "types": ["vite/client"],

    /* DX */
    "paths": {
      "react": ["./node_modules/@types/react"],
      "@/*": ["./src/*"],
      "#/*": ["./src/*"]
    }
  }
}
